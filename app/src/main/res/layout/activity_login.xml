<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".ui.login.LoginActivity">

        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="@string/enter_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_account"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/et_account"
            app:layout_constraintEnd_toEndOf="@id/et_account"
            app:layout_constraintTop_toBottomOf="@id/et_account" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="@string/enter_pass"
            android:inputType="numberPassword"
            app:layout_constraintStart_toStartOf="@id/view_account"
            app:layout_constraintEnd_toEndOf="@id/view_account"
            app:layout_constraintTop_toBottomOf="@id/view_account" />

        <View
            android:id="@+id/view_pass"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/et_pass"
            app:layout_constraintEnd_toEndOf="@id/et_pass"
            app:layout_constraintTop_toBottomOf="@id/et_pass" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="@id/view_pass"
            app:layout_constraintEnd_toEndOf="@id/view_pass"
            app:layout_constraintTop_toBottomOf="@id/view_pass" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>